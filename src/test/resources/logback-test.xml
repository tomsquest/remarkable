<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date %-5level [%thread] %class.%method:%line - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="remarkable">
    <level value="DEBUG"/>
  </logger>

  <root>
    <level value="WARN"/>
    <appender-ref ref="CONSOLE"/>
  </root>

</configuration>